<div class="socials">
    <div class="socials__inner">
        <ul class="socials__list">
            <% _.each(['email', 'twitter', 'facebook', 'github'], (social) => { %>
                <% if (theme[social]) { %>
                <li class="socials__item">
                    <% if(social === 'email') { %>
                    <a class="socials__link" href="mailto:<%= theme.email %>">
                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        <span class="blind">Email</span>
                    </a>
                    <% } else { %>
                    <a class="socials__link" href="//<%= social %>.com/<%= theme[social] %>" target="_blank">
                        <i class="fa fa-<%= social %>" aria-hidden="true"></i>
                        <span class="blind"><%= _.upperFirst(social) %></span>
                    </a>
                    <% } %>
                </li>
                <% } %>
            <% }) %>
            <li class="socials__item">
                <a class="socials__link" href="/atom.xml" target="_blank">
                    <i class="fa fa-rss" aria-hidden="true"></i>
                    <span class="blind">RSS</span>
                </a>
            </li>
        </ul>
    </div>
</div>
