<div class="tags">
    <div class="tags__inner">
        <i class="fa fa-tags" aria-hidden="true"></i>
        <% if(tags && tags.length > 0) { %>
            <%- list_tags(tags, {
                show_count: 0,
                style: 'list',
                class: 'tags__tag'
            }) %>
        <% } %>
    </div>
</div>
