<ul class="media">
  <% ['email', 'twitter', 'facebook', 'github', 'rss'].forEach(social => { %>
    <% if (theme[social]) { %>
      <li class="media__medium">
        <% if(social === 'email') { %>
          <a href="mailto:<%= theme.email %>">
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
            <span class="blind">Email</span>
          </a>
        <% } else if (social === 'rss') { %>
          <a href="/atom.xml" target="_blank">
            <i class="fa fa-rss" aria-hidden="true"></i>
            <span class="blind">RSS</span>
          </a>
        <% } else { %>
          <a href="//<%= social %>.com/<%= theme[social] %>" target="_blank">
            <i class="fa fa-<%= social %>" aria-hidden="true"></i>
            <span class="blind"><%= social.charAt(0).toUpperCase() + social.slice(1) %></span>
          </a>
        <% } %>
      </li>
    <% } %>
  <% }) %>
</ul>
